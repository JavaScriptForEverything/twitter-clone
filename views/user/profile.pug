extends ../layout/mainLayout
block content
	include ../icon/icons
	include ../components/mui/@index
	include ../components/@index

	div(class='grid grid-cols-12 p-2 divide-x')
		//- left-section
		div(class='col-span-2')
			+NavComponent()


		//- middle-section
		div(class='col-span-10 md:col-span-7')

			h1(class='p-2 border-b border-slate-200 text-slate-900 font-bold') #{user.username}

			//- Image Section 
			div(class='border border-slate-100 shadow-sm')
				div(class='h-40 bg-blue-500 relative')
					img(class='absolute top-28 left-2 rounded-full w-24 h-24' src=user.avatar alt=user.avatar )

				div(class='mt-12 text-slate-500 space-y-0.5 p-2')
					p(class=' text-slate-700 font-medium') #{user.username}
					p @#{user.username}
					div(class='flex gap-2 items-center')
						p 
							span(class='text-slate-700 font-medium') 3 
							span following
						p 
							span(class='text-slate-700 font-medium') 3 
							span followers

			//- Posts & Reply Section 
			div(class='border border-slate-100 shadow-sm mt-4')
				nav(class='grid grid-cols-2 ')
					p(class='text-center cursor-pointer border border-b-blue-500 text-blue-500 font-medium') Posts
					p(class='text-center cursor-pointer') replies


				div(class='')
					each tweet in user.tweets
						+Tweet(tweet)






		//- right-section
		div(class='hidden md:col-span-3')
			p right section hiddend for now
	

	script.
		const logedInUser = !{ JSON.stringify(user) } 	

		console.log(logedInUser)
