mixin Button( props = {})
	-
		const {
			value='Button',
			type='button',

			uppercase=true,
			disabled=false,

		} = props
	button(
		type=type
		class='border border-blue-300 px-3 py-1 shadow-sm rounded text-blue-500'
		class='hover:bg-blue-50 active:bg-blue-200 active:text-blue-600 border-blue-400' 
		class=uppercase ? 'uppercase' : 'normalcase'
		class='disabled:text-slate-400 disabled:border-slate-400' 
		disabled=disabled
	)= value