				div(
					class='flex [&>img]:w-8 [&>img]:h-8 [&>img]:rounded-full [&>*:first-child]:z-10'
					class='[&>*:not(:first-child)]:-ml-3'
				) 
					img(src='/images/users/default.jpg')
